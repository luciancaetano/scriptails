{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": false,
    "resolveJsonModule": true,
    "declaration": false,
    "types": [
      "@types/node",
      "jest"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "./lib/**/*",
    "./tests/**/*"
  ]
}