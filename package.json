{
  "name": "scriptails",
  "version": "2.0.0",
  "description": "Write scripts like tests",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "./types.d.ts",
  "scripts": {
    "build": "yarn lint && yarn types && rollup -c",
    "lint": "eslint src",
    "types": "npx dts-bundle-generator ./src/index.ts -o types.d.ts",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "release:pre": "standard-version --prerelease"
  },
  "keywords": [
    "script",
    "ci",
    "continuous",
    "integration"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/luciancaetano/scriptails.git"
  },
  "author": {
    "name": "Lucian Caetano",
    "url": "https://github.com/luciancaetano"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/commander": "^2.12.2",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.41",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "dts-bundle-generator": "^5.9.0",
    "eslint": "^7.24.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.2.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "rollup": "^2.45.2",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "standard-version": "^9.2.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "commander": "^7.2.0",
    "lodash": "^4.17.21",
    "pretty-error": "^3.0.3",
    "readline": "^1.3.0",
    "tslib": "^2.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/**/*.ts?(x)": [
      "eslint --fix"
    ]
  },
  "gacp": {
    "push": true,
    "emoji": "code"
  }
}
